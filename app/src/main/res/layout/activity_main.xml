<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/base_currency_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imageButton_Flag"
                android:contentDescription="flag for this nation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_aud"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:paddingRight="64dp">

            <TextView
                android:id="@+id/textView_currency_short"
                style="@style/rate_title"
                android:text="BAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView_currency_long"
                android:layout_width="match_parent"
                android:text="Central Base Rate"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_base_rate"
            android:hint="0"
            android:layout_width="wrap_content"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/dollar_currency_layout"
        app:layout_constraintTop_toBottomOf="@id/base_currency_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imageButton_Flag_2"
                android:contentDescription="flag for this nation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_usd"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:paddingRight="64dp">

            <TextView
                android:id="@+id/textView_currency_short_2"
                style="@style/rate_title"
                android:text="USD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView_currency_long_2"
                android:layout_width="match_parent"
                android:text="Mighty American Dollar"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/textview_num_usd"
            android:hint="0"
            android:layout_width="wrap_content"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="?attr/editTextColor"
            android:background="?attr/editTextBackground"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/euro_currency_layout"
        app:layout_constraintTop_toBottomOf="@id/dollar_currency_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imageButton_Flag_3"
                android:contentDescription="flag for this nation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_eur"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:paddingRight="64dp">

            <TextView
                android:id="@+id/textView_currency_short_3"
                style="@style/rate_title"
                android:text="EUR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView_currency_long_3"
                android:layout_width="match_parent"
                android:text="Unstoppable Euro"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/textview_num_eur"
            android:hint="0"
            android:layout_width="wrap_content"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="?attr/editTextColor"
            android:background="?attr/editTextBackground"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/brazilian_real_currency_layout"
        app:layout_constraintTop_toBottomOf="@id/euro_currency_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imageButton_Flag_4"
                android:contentDescription="flag for this nation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_brl"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:paddingRight="64dp">

            <TextView
                android:id="@+id/textView_currency_short_4"
                style="@style/rate_title"
                android:text="BRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView_currency_long_4"
                android:layout_width="match_parent"
                android:text="Big Brazilian Real"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/textview_num_brl"
            android:hint="0"
            android:layout_width="wrap_content"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="?attr/editTextColor"
            android:background="?attr/editTextBackground"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/canadian_dollar_currency_layout"
        app:layout_constraintTop_toBottomOf="@id/brazilian_real_currency_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="50dp"
            android:layout_margin="8dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imageButton_Flag_5"
                android:contentDescription="flag for this nation"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/flag_cad"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="8"
            android:paddingRight="64dp">

            <TextView
                android:id="@+id/textView_currency_short_5"
                style="@style/rate_title"
                android:text="CAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/textView_currency_long_5"
                android:layout_width="match_parent"
                android:text="Kind Canadian Dollar"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/textview_num_cad"
            android:hint="0"
            android:layout_width="wrap_content"
            android:paddingRight="8dp"
            android:layout_marginRight="8dp"
            android:inputType="number"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="?attr/editTextColor"
            android:background="?attr/editTextBackground"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>